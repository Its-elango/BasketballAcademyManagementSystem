@model IEnumerable<BasketballAcademy.Models.Admin>

@{
    ViewBag.Title = "ViewAll";
    Layout = "~/Views/Shared/AdminLayoutPage.cshtml";
}
<script src="~/Scripts/PreventBack.js"></script>

<h2 class="text-center">Admins</h2>
<p>
    <a href="@Url.Action("addAdmin")" class="btn btn-outline-primary"><i class="fa-solid fa-user-plus"></i>Admin </a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="text-center">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Username</th>
                <th><h6><b>Action</b></h6></th>
            </tr>
        </thead>
        <tbody class="text-center ">
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                    <td>@Html.DisplayFor(modelItem => item.fullName)</td>
                    <td>@Html.DisplayFor(modelItem => item.email)</td>
                    <td>@Html.DisplayFor(modelItem => item.username)</td>
                    <td>
                        <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-outline-danger"><i class="fa-regular fa-trash-can"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
