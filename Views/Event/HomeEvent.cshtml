@model IEnumerable<BasketballAcademy.Models.Events>

@{
    
    Layout =null;
}

<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/PreventBack.js"></script>
<div class="row justify-content-center">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                @if (item.EventImage != null)
                {
                    <img src="data:image;base64,@Convert.ToBase64String(item.EventImage)" class="card-img-top" height="200" width="200" alt="Event Image">
                }
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.EventName)</h5>
                    <p class="card-text">
                        <strong>Date:</strong> @Html.DisplayFor(modelItem => item.EventDate)<br />
                        <strong>Time:</strong> @Html.DisplayFor(modelItem => item.EventTime)<br />
                        <strong>Age Group:</strong> @Html.DisplayFor(modelItem => item.AgeGroup)<br />
                        <strong>Venue:</strong> @Html.DisplayFor(modelItem => item.Venue)<br />
                        <strong>Contact person:</strong> @Html.DisplayFor(modelItem => item.Incharge)<br />
                        <strong>Contact:</strong> @Html.DisplayFor(modelItem => item.Contact)
                    </p>
                    <p class="card-text">   <strong>Instruction:</strong>@Html.DisplayFor(modelItem => item.Details)</p>
                    <p class="card-text"><strong>Prize Details:</strong> @Html.DisplayFor(modelItem => item.PrizeDetails)</p>
                    @Html.ActionLink("Register", "RegisterEvent", new { coachid = Session["Id"], id = item.EventID }, new { @class = "btn btn-success justify-content-center" })


                </div>
            </div>
        </div>
    }
    <p class="text-center text-success fw-bold">@ViewBag.SuccessMessage</p>
    <p class="text-center text-danger fw-bold"> @ViewBag.FailureMessage</p>
</div>

