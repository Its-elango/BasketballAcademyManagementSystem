@model IEnumerable<BasketballAcademy.Models.Events>

@{
    ViewBag.Title = "ViewEvents";
    Layout = "~/Views/Shared/AdminLayoutPage.cshtml";
}
<script src="~/Scripts/PreventBack.js"></script>
<h2 class="text-center">Our events</h2>

<p>
    <a href="@Url.Action("AddEvents")" class="btn btn-outline-primary">Add event</a>
</p>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="text-center">
            <tr>
                <th>Name</th>
                <th>Date</th>
                <th>Time</th>
                <th>Venue</th>
                <th>Details</th>
                <th>Incharge</th>
                <th>Age group</th>
                <th>Prize </th>
                <th>Contact</th>
                <th>Event poster</th>
                <th><b>Action</b></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="text-center">
                    <td>@Html.DisplayFor(modelItem => item.EventName)</td>
                    <td>@Html.DisplayFor(modelItem => item.EventDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.EventTime)</td>
                    <td>@Html.DisplayFor(modelItem => item.Venue)</td>
                    <td>@Html.DisplayFor(modelItem => item.Details)</td>
                    <td>@Html.DisplayFor(modelItem => item.Incharge)</td>
                    <td>@Html.DisplayFor(modelItem => item.AgeGroup)</td>
                    <td>@Html.DisplayFor(modelItem => item.PrizeDetails)</td>
                    <td>@Html.DisplayFor(modelItem => item.Contact)</td>
                    <td>
                        @if (item.EventImage != null)
                        {
                            <a href="data:image;base64,@Convert.ToBase64String(item.EventImage)" target="_blank">
                                <img src="data:image;base64,@Convert.ToBase64String(item.EventImage)" alt="Picture" height="50px" width="50px" />
                            </a>
                        }
                        else
                        {
                            <span>No image available</span>
                        }
                    </td>
                    <td>
                        <a href="@Url.Action("Delete", new { id = item.EventID })" class="btn btn-danger"><i class="fa-solid fa-trash"></i></a>
                        <a href="@Url.Action("ViewRegistration", new { id = item.EventID })" class="btn btn-primary my-2"><i class="fa-solid fa-eye"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
