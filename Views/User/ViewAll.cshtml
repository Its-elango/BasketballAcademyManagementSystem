@model IEnumerable<BasketballAcademy.Models.User>

@{
    ViewBag.Title = "ViewAll";
    Layout = "~/Views/Shared/AdminLayoutPage.cshtml";
}
<script src="~/Scripts/PreventBack.js"></script>
<h2 class="text-center">Users details</h2>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr class="text-center">
                <th>Name</th>
                <th>Username</th>
                <th>Email</th>
                <th><b>Action</b></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="text-center">
                    <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                    <td>@Html.DisplayFor(modelItem => item.username)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>
                        <a href="@Url.Action("Delete", new { id = item.ID })" class="btn btn-outline-danger"><i class="fa-solid fa-trash"></i></a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>
